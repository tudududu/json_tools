{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Unittest (discover all)",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "cwd": "${workspaceFolder}",
      "args": [
        "discover",
        "-s",
        "${workspaceFolder}/python/tests",
        "-p",
        "test_*.py",
        "-v"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "internalConsole",
      "justMyCode": true
    },
    {
      "name": "Debug: Unittest (single test)",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "cwd": "${workspaceFolder}",
      "args": [
        "-v",
        "${input:unittestTestSpecifier}"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "internalConsole",
      "justMyCode": true
    },
    {
        "name": "Debug: Custom runner (run_tests.py)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/python/run_tests.py",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "console": "internalConsole",
        "justMyCode": true
      },
      {
        "name": "Debug: Unittest (single specific test example)",
        "type": "debugpy",
        "request": "launch",
        "module": "unittest",
        "cwd": "${workspaceFolder}",
        "args": [
          "-v",
          "python.tests.test_logo_anim_flag.LogoAnimFlagTests.test_overview_present_and_per_video_injection"
        ],
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "console": "internalConsole",
        "justMyCode": true
        },
        {
          "name": "Debug: Unittest (single file example)",
          "type": "debugpy",
          "request": "launch",
          "module": "unittest",
          "cwd": "${workspaceFolder}",
          "args": [
            "-v",
            "${workspaceFolder}/python/tests/test_logo_anim_flag.py"
          ],
          "env": {
            "PYTHONPATH": "${workspaceFolder}"
          },
          "console": "internalConsole",
          "justMyCode": true
        }
  ],
  "inputs": [
    {
      "id": "unittestTestSpecifier",
      "type": "promptString",
      "description": "Unittest test specifier (file path or dotted name). Examples: python/tests/test_logo_anim_flag.py or python.tests.test_logo_anim_flag.LogoAnimFlagTests.test_overview_present_and_per_video_injection",
      "default": "python/tests/test_logo_anim_flag.py"
    }
  ]
}
