{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tests: pytest (coverage term)",
      "type": "shell",
      "command": "source .venv/bin/activate && pytest --cov=python --cov-branch --cov-report=term --cov-config=.coveragerc",
      "group": "test",
      "problemMatcher": [
        {
          "owner": "python-traceback",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^\\s*File \\\"(.+?)\\\", line (\\\\d+), in .*$",
            "file": 1,
            "line": 2
          }
        },
        {
          "owner": "flake8-ruff",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.+?):(\\\\d+):(\\\\d+): (\\w+\\d+) (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "message": 5
          }
        }
      ]
    },
    {
      "label": "Tests: pytest (quick)",
      "type": "shell",
      "command": "source .venv/bin/activate && pytest -q",
      "group": "test",
      "problemMatcher": [
        {
          "owner": "python-traceback",
          "fileLocation": ["absolute"],
          "pattern": {
