{
  "files.associations": {
    "**/.github/workflows/*.yml": "github-actions-workflow",
    "**/.github/workflows/*.yaml": "github-actions-workflow"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },
  "makefile.configureOnOpen": false,
  "python.testing.unittestEnabled": true,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "python/tests",
    "-p",
    "test_*.py"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": false,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.profiles.osx": {
    "Venv (json_tools)": {
      "path": "zsh",
      "args": ["-i", "-c", "export VIRTUAL_ENV='${workspaceFolder}/.venv'; export PATH='${workspaceFolder}/.venv/bin:'$PATH; export VIRTUAL_ENV_DISABLE_PROMPT=1; exec zsh -i"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "Venv (json_tools)"
}
